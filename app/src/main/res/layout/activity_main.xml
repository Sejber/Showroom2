<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:contentInsetStart="0dp"
        app:contentInsetStart="0dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"/>
    <ImageButton
        android:id="@+id/main_screen_top_toolbar_settings"
        android:layout_height="60dip"
        android:layout_width="60dip"
        android:layout_gravity="left"
        android:background="@drawable/ic_home_black_24dp" />

    <TabHost
        android:id="@+id/tabhost_studiengang"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/tab_alle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/gridView_alle"
                        android:numColumns="auto_fit"
                        android:gravity="center"
                        android:stretchMode="columnWidth"
                        android:columnWidth="@dimen/tileWidth"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >
                    </GridView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/gridView_et"
                        android:numColumns="auto_fit"
                        android:gravity="center"
                        android:stretchMode="columnWidth"
                        android:columnWidth="@dimen/tileWidth"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >
                    </GridView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab_it"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/gridView_it"
                        android:numColumns="auto_fit"
                        android:gravity="center"
                        android:stretchMode="columnWidth"
                        android:columnWidth="@dimen/tileWidth"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >
                    </GridView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab_mb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/gridView_mb"
                        android:numColumns="auto_fit"
                        android:gravity="center"
                        android:stretchMode="columnWidth"
                        android:columnWidth="@dimen/tileWidth"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >
                    </GridView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab_mt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/gridView_mt"
                        android:numColumns="auto_fit"
                        android:gravity="center"
                        android:stretchMode="columnWidth"
                        android:columnWidth="@dimen/tileWidth"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >
                    </GridView>

                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>

</RelativeLayout>
