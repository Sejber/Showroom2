<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/spacingDetailViewSmall">

        <EditText
            android:id="@+id/newTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Projekt-Titel" />

        <EditText
            android:id="@+id/newMembers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mitglieder (mit Komma getrennt)"
            android:layout_marginTop="@dimen/spacingDetailViewSmall" />

        <Spinner
            android:id="@+id/newSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacingDetailViewSmall" />

        <EditText
            android:id="@+id/newDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="Jahr"
            android:layout_marginTop="@dimen/spacingDetailViewSmall" />

        <EditText
            android:id="@+id/newTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tags (mit Komma getrennt)"
            android:layout_marginTop="@dimen/spacingDetailViewSmall" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/spacingDetailViewSmall">

        <TextView
            android:id="@+id/textView"
            android:text="Titelbild Vorschau:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/newImageView"
            android:layout_width="400dp"
            android:layout_height="243dp"
            android:layout_marginTop="@dimen/spacingDetailViewSmall"
            app:srcCompat="@drawable/back1920x1080"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/newBtnLoadImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/chooseImageFile"/>

    </LinearLayout>



</LinearLayout>
