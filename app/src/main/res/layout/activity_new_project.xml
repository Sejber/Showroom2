<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_project"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="robertboschgmbh.test.NewProjectActivity">

    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/newToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:contentInsetStart="0dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/newEndButton"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:layout_gravity="start"
                android:layout_alignParentTop="true"
                android:background="@drawable/ic_close_black_24dp" />

            <ImageButton
                android:id="@+id/newSaveButton"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:layout_gravity="start"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/newEndButton"
                android:background="@drawable/ic_save_black_24dp" />

            <ImageView
                android:id="@+id/imageView"
                android:src="@drawable/logo"
                android:scaleType="centerInside"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="6dp"
                android:layout_width="135dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/newToolbar"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_margin="@dimen/spacingDetailViewLarge">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="243dp"
            app:srcCompat="@drawable/back1920x1080"
            android:scaleType="centerCrop"
            android:id="@+id/newImageView"
            android:layout_below="@+id/textView"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Projekt-Titel"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/newImageView"
            android:id="@+id/newTitle" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Mitglieder (mit Kommas getrennt)"
            android:ems="10"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/newTitle"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/newImageView"
            android:id="@+id/newMembers" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Fachrichtung"
            android:layout_marginTop="6dp"
            android:ems="10"
            android:layout_below="@+id/newMembers"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/newImageView"
            android:id="@+id/newDepartment" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="Datum (im Format DD.MM.YYYY)"
            android:layout_marginTop="6dp"
            android:ems="10"
            android:layout_below="@+id/newDepartment"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/newImageView"
            android:id="@+id/newDate" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Tags (mit Komma gertennt)"
            android:layout_marginTop="6dp"
            android:ems="10"
            android:layout_below="@+id/newDate"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/newImageView"
            android:id="@+id/newTags" />

        <Button
            android:text="Titelbild hinzufÃ¼gen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newAddImage"
            android:layout_below="@+id/newTags"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/newImageView"
            android:layout_alignEnd="@+id/newDepartment" />

        <TextView
            android:text="Titelbild Vorschau:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@id/newImageView"
            android:id="@+id/textView" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newAddImage"
            android:layout_centerHorizontal="true"
            android:id="@+id/newSpinner" />


    </RelativeLayout>

</RelativeLayout>
